
.container{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-around;
}
.father-vector{
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content: space-around;
	position: fixed;
	top: 20%;
	width: 72.5%;
	height: 34.8%;
	border-radius: 25px;
	background-color: rgba(255,255,255,1);
	text-align: center;
	border: 1px solid rgba(187,187,187,1);
}
.child-vector1{
	flex: 0.5;
	border-radius: 15px;
	background-color: rgba(29,66,204,1);
	color: rgba(255,255,255,1);
	margin-top: -60%;
	height: 13%;
	/*文字 */
	font-size: 14px;
	font-family: cursive;
	text-align: center;
	border: 1px solid rgba(187,187,187,1);		
	text-align: center; /* 让文本水平居中 */
	display: flex; /* 使用 Flexbox */
	justify-content: center; /* 让文本垂直居中 */
	align-items: center; /* 让文本垂直居中 */
}
.child-vector2{
	flex: 0.3;
	border-radius: 18px;
	background-color: rgba(255,255,255,1);
	color: rgba(29,66,204,1);
	margin-top: -60%;
	height: 13%;
	font-size: 14px;
	text-align: center;
	border: 2px solid rgba(29,66,204,1);
	font-family: cursive;
	text-align: center; /* 让文本水平居中 */
	display: flex; /* 使用 Flexbox */
	justify-content: center; /* 让文本垂直居中 */
	align-items: center; /* 让文本垂直居中 */
}
