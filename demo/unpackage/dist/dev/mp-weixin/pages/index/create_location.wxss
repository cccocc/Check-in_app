.box {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  background-color: rgba(0, 0, 0, 0.6);
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  font-size: 50rpx;
  color: #3871fe;
}
.box .window {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 90%;
  height: 80%;
  background-color: #ffffff;
  border-radius: 30rpx;
  flex-direction: column;
}
.box .window .prompt {
  margin-top: 10rpx;
  position: relative;
}
.box .window .rule {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 80rpx;
  margin-bottom: 5rpx;
}
.box .window .rule .sign_time {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
}
.box .window .rule .sign_time .time_pro {
  font-size: 40rpx;
}
.box .window .rule .sign_time .uni-list {
  font-size: 40rpx;
  border: 2rpx solid #3871fe;
  color: #0346fe;
}
.box .window .rule .sign_rule {
  display: flex;
  margin-bottom: 10rpx;
}
.box .window .rule .sign_rule .rule_pro {
  font-size: 40rpx;
}
.box .window .rule .uni-input-rule {
  font-size: 36rpx;
  border: 2rpx solid #3871fe;
  width: 86%;
  color: #0346fe;
  height: 150rpx;
}
.box .window .rule .rule_sign_code {
  font-size: 40rpx;
  display: flex;
  margin-top: 15rpx;
}
.box .window .rule .rule_sign_code .tip {
  font-size: 36rpx;
}
.box .window .rule .rule_sign_code .generate_code {
  font-size: 36rpx;
  width: 80%;
}
.box .window .button {
  display: flex;
  justify-content: space-between;
  width: 80%;
  margin-top: 50rpx;
}
.box .window .button .comfirm {
  background-color: #ffffff;
  color: #3871fe;
  width: 40rpx;
  flex: 1;
  border: 2rpx solid #3871fe;
  border-radius: 8rpx;
  font-size: 36rpx;
  margin-right: 10rpx;
  text-align: center;
}
.box .window .button .cancel {
  background-color: #ffffff;
  color: #3871fe;
  flex: 1;
  border: 2rpx solid #3871fe;
  border-radius: 8rpx;
  font-size: 36rpx;
  margin-right: 10rpx;
  /* Adjust margin as needed */
  text-align: center;
}
.box .window .button .button-hover {
  color: #ffffff;
  background-color: #2b5ad7;
  border: 2px solid #ffffff;
}

