.box {
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  background-color: rgba(0, 0, 0, 0.6);
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  font-size: 50rpx;
  color: #3871fe;
}
.box .window {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 70%;
  height: 60%;
  background-color: #ffffff;
  border-radius: 30rpx;
  flex-direction: column;
}
.box .window .prompt {
  margin-top: 10rpx;
  position: relative;
}
.box .window .input_window {
  width: 80%;
  height: 100rpx;
}
.box .window .input_window .code-input-wrap {
  margin: 40rpx 0;
  position: relative;
  height: 100rpx;
}
.box .window .input_window .code-input-wrap .code-input {
  position: absolute;
  left: 0;
  top: 0;
  height: 100rpx;
  width: 100%;
  opacity: 0;
  z-index: 99;
  outline: none;
}
.box .window .input_window .code-input-wrap .code-list {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}
.box .window .input_window .code-input-wrap .code-list .code-list-item {
  width: 90rpx;
  height: 100rpx;
  background: #ffffff;
  border-radius: 16rpx;
  font-size: 36rpx;
  font-weight: 700;
  color: #3871fe;
  line-height: 100rpx;
  text-align: center;
  margin-right: 10rpx;
  z-index: 5;
  box-sizing: border-box;
}
.box .window .input_window .code-input-wrap .code-list-item:last-child {
  margin-right: 0;
}
.box .window .input_window .code-input-wrap .active-item {
  border: 2rpx solid #2b5ad7;
}
.box .window .button {
  display: flex;
  justify-content: space-between;
  width: 80%;
  margin-top: 70rpx;
}
.box .window .button .comfirm {
  background-color: #ffffff;
  color: #3871fe;
  width: 40rpx;
  flex: 1;
  border: 2rpx solid #3871fe;
  border-radius: 8rpx;
  font-size: 36rpx;
  margin-right: 10rpx;
  text-align: center;
}
.box .window .button .cancel {
  background-color: #ffffff;
  color: #3871fe;
  flex: 1;
  border: 2rpx solid #3871fe;
  border-radius: 8rpx;
  font-size: 36rpx;
  margin-right: 10rpx;
  /* Adjust margin as needed */
  text-align: center;
}
.box .window .button .button-hover {
  color: #ffffff;
  background-color: #2b5ad7;
  border: 2px solid #ffffff;
}

