
.container{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
}
.Promption{
		position: fixed;
		top:5%;
		font-size: 65rpx;
		color: rgba(255,255,255,1);
		font-family: cursive;
}
.Four-blocks{
		position: fixed;
		top:calc(5% + 80rpx);
		display: flex; /* 使用 Flexbox 布局 */
		justify-content: space-around; /* 水平对齐，按钮之间平均分配空间 */
		align-items: center; /* 垂直对齐居中 */
		width: 100%; /* 让 .Four-blocks 充满其容器的宽度 */
		box-sizing: border-box; /* 让宽度包括内边距和边框 */
}
.child-modal{
		position: fixed;
		top:23%;
		background: white;
		width: 80%;
		height:70%;
		margin-left: 10%;
		margin-right: 10%;
		border-radius: 20rpx;
}
