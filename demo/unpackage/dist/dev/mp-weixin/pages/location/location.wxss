page {
  background-image: url("https://pic.imgdb.cn/item/6556f813c458853aef4cea99.jpg");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
}
.box .text {
  font-size: 60rpx;
  color: white;
  display: flex;
  justify-content: center;
  margin: 0 auto;
  margin-top: 150rpx;
}
.box .countdown {
  color: white;
  display: flex;
  justify-content: center;
  margin: 0 auto;
  margin-top: 10rpx;
  width: 600rpx;
}
.box .circle {
  display: flex;
  position: relative;
  justify-content: center;
  flex-direction: column;
  margin: 0 auto;
  margin-top: 150rpx;
  width: 350rpx;
  height: 350rpx;
  border-radius: 50%;
  background-color: white;
  overflow: hidden;
  /* inset 表示内阴影 */
  /* box-shadow: 0 3px 150upx #62d0d6 inset; */
  box-shadow: -10rpx 0rpx 30rpx #3871fe, 0rpx -10rpx 30rpx #65dee2, 10rpx 0rpx 30rpx #f7dc77, 0rpx 10rpx 30rpx #c84848;
}
.box .circle .cirecle_ {
  position: absolute;
  width: 150rpx;
  height: 450rpx;
  top: 0rpx;
  left: -150rpx;
  -webkit-transform: skew(30deg);
          transform: skew(30deg);
  background-image: linear-gradient(90deg, rgba(255, 255, 255, 0), rgba(151, 175, 255, 0.5), rgba(255, 255, 255, 0));
}
.box .circle .location_icon {
  display: flex;
  justify-content: center;
  margin: 0 auto;
  margin-top: 10rpx;
  font-size: 150rpx;
}
.box .circle .location_text {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 auto;
  color: #4076fe;
  margin-top: 30rpx;
  font-size: 45rpx;
}
.box .button-hover .cirecle_ {
  left: 600rpx;
  transition: all 1s;
}

