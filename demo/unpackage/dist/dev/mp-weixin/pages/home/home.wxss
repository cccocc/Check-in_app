page {
  background-image: url("https://pic.imgdb.cn/item/6556f813c458853aef4cea99.jpg");
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  position: fixed;
  width: 100vw;
  height: 100vh;
}
.white-box {
  position: fixed;
  left: 10%;
  top: 35%;
  width: 80%;
  height: 322px;
  line-height: 20px;
  border-radius: 10px;
  background-color: white;
  color: #101010;
  font-size: 14px;
  text-align: center;
  font-family: Roboto;
  border: 1px solid #bbbbbb;
}
.white-box .button1 .box-image {
  position: absolute;
  left: 5%;
  top: 25%;
  width: 24px;
  height: 24px;
}
.white-box .button1 .rightimage {
  position: absolute;
  right: 5%;
  top: 25%;
  width: 24px;
  height: 24px;
}
.custom-button {
  position: fixed;
  left: 10%;
  /* 使用百分比调整 left 属性 (18px / 390px * 100%) */
  top: 13%;
  /* 使用百分比调整 top 属性 (124px / 844px * 100%) */
  width: 80%;
  /* 使用百分比调整 width 属性 (359px / 390px * 100%) */
  height: 15%;
  /* 使用百分比调整 height 属性 (117px / 844px * 100%) */
  display: flex;
  align-items: center;
  /* 垂直居中 */
  justify-content: center;
  /* 水平居中 */
  border-radius: 51px;
  /* 使用百分比调整 border-radius 属性 (51px / 390px * 100%) */
  background-color: white;
  text-align: center;
  border: 1px solid #bbbbbb;
  font-size: 20px;
  /* 使用百分比调整 font-size 属性 */
  font-family: cursive;
  color: rgba(0, 0, 0, 0.4);
  /* 文字颜色，根据需要修改 */
}
.custom-button .image {
  position: absolute;
  left: 5px;
  /* 设置为父元素的一半 */
  top: 50%;
  /* 设置为父元素的一半 */
  -webkit-transform: translate(0, -50%);
          transform: translate(0, -50%);
  /* 通过负的50%的宽度和高度将图像居中 */
  height: 70px;
  /* 高度设置为父元素高度的80% */
  width: 70px;
}
.custom-button .user-name {
  position: absolute;
  left: 75px;
  top: 30%;
  -webkit-transform: translate(0, -50%);
          transform: translate(0, -50%);
  text-align: left;
  margin-left: 10px;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.8);
  margin-bottom: 5px;
}
.custom-button .user-id {
  position: absolute;
  left: 75px;
  top: 50%;
  -webkit-transform: translate(0, -50%);
          transform: translate(0, -50%);
  text-align: left;
  margin-left: 10px;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.8);
  margin-bottom: 5px;
}
.custom-button .user-class {
  position: absolute;
  left: 75px;
  top: 70%;
  -webkit-transform: translate(0, -50%);
          transform: translate(0, -50%);
  text-align: left;
  margin-left: 10px;
  font-size: 14px;
  color: rgba(0, 0, 0, 0.8);
  margin-bottom: 5px;
}
/* 媒体查询，根据屏幕宽度调整按钮大小 */
